<!-- להשאיר פה זה רלוונטי רק לדף הזה -->
<script>
document.addEventListener("DOMContentLoaded", function() {
	/* 1 */
	// Active state scrollable area
	function setActiveServicesPageListScrollableNav() {
		aObj = document.getElementById('services_pagelist').getElementsByTagName('a');
		let currentPath = window.location.pathname;
		let currentPathWithOutSlash = currentPath.slice(0, -1); // "12345.0
		for(i=0;i<aObj.length;i++) {
			if(aObj[i].getAttribute('href') == currentPath || aObj[i].getAttribute('href') == currentPathWithOutSlash && aObj[i].parentElement.tagName == 'LI') {
				aObj[i].parentElement.className='uk-text-large  uk-text-bold uk-active';
			}
		}
	};
	setActiveServicesPageListScrollableNav();

	/* 2 */
	// Active state service list area
	function setActiveServicesScrollableNav() {
		aObj = document.getElementById('services-scroll-nav').getElementsByTagName('a');
		let currentPath = window.location.pathname;
		let currentPathWithOutSlash = currentPath.slice(0, -1); // "12345.0
		for(i=0;i<aObj.length;i++) {
			if(aObj[i].getAttribute('href') == currentPath || aObj[i].getAttribute('href') == currentPathWithOutSlash && aObj[i].parentElement.tagName == 'LI') {
				aObj[i].parentElement.className='pure-menu-item  uk-text-bold uk-active';
			}
		}
	};
	setActiveServicesScrollableNav();

	// Active state dropdown Parent - רלוונטי רק למסך זה
	function setActiveServiceNavParent() {
		aObj = document.getElementById('nav-desktop').getElementsByTagName('a');
		let currentPath = window.location.pathname;
		let currentPathWithOutSlash = currentPath.slice(0, -1); // "12345.0
		for(i=0;i<aObj.length;i++) {
			if(aObj[i].getAttribute('href') == currentPath || aObj[i].getAttribute('href') == currentPathWithOutSlash && aObj[i].parentElement.tagName == 'LI') {
				aObj[i].parentElement.parentElement.parentElement.parentElement.parentElement.parentElement.className='pure-menu-item uk-text-bold uk-active';
			}
		}
	};
	setActiveServiceNavParent();



});

</script>
