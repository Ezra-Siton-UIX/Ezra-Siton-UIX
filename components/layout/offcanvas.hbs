
<!-- OFF CANVAS -->
<nav  itemscope itemtype="http://schema.org/SiteNavigationElement">
	<!--off-canvas btn show only on mobile -->
	<div id="offcanvas-nav-primary" data-uk-offcanvas="overlay: true; mode: push; flip: false">
		<div class="uk-offcanvas-bar uk-flex uk-flex-column">
			<!-- navbar content her -->
			<a class="uk-logo uk-margin-small-top" href="/{{ global.language }}/">
				<img itemprop="logo" src="{{global.logo.src}}" alt="{{global.company_name}} logo">
			</a>
			<!-- A - logo -->
			<a class="uk-hidden uk-logo uk-margin-small-top" href="/{{ global.language }}/">{{global.company_name}}</a>
			<hr class="">
			<!-- B - nav -->
			<ul id="nav-mobile" class="uk-nav uk-nav-default uk-margin-top uk-nav-parent-icon" data-uk-nav role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">

				{{#each global.mainmenu.items}}
				<li {{{ternary is_parent 'class="uk-parent2 uk-open2"'}}} {{{ternary is_service 'class="uk-parent2 uk-open2"'}}}>
					<a itemprop="url" title="{{this.label}}"  {{{ternary new_window 'target="_blank"'}}}
					href="{{this.link}}">
					{{this.label}}
				</a>
				{{#if is_parent}}
				<ul class="uk-nav-sub">
					{{#each child}}
					<li>
						<a title="{{this.label}}" href="{{this.link}}">
							{{this.label}}
						</a>
					</li>
					{{/each}}<!-- end each child -->
				</ul>
				{{/if}}<!-- end is_parent -->

				{{#if is_service2}}
				<ul class="uk-nav-sub">
					{{#grouped_each 2 services_list}}
					{{#each this}}
					<li class="">
						<h3 class="uk-text-small uk-margin-small-top" style="font-size: 10px; margin-bottom: 5px;">{{label}}:</h3>
						<ul class="uk-nav uk-navbar-dropdown-nav uk-padding-remove">
							{{#each topics}}
							<li><a title="{{this.label}}" href="/{{../language}}/{{../parent_slug}}/{{page_slug}}">
								• &nbsp;&nbsp;
								<span>
									{{this.label}}
								</span>
							</a>
						</li>
						{{/each}}
					</ul>
				</li>
				{{/each}}

				{{/grouped_each}}
			</ul>

			{{/if}}<!-- end is_service -->
		</li>
		{{/each}}
	</ul>




	<ul id="offcanvas-lan" class="uk-nav uk-nav-default">
		<li class="uk-nav-divider"></li>
		<li>
			<a id="off-canvas-heb-button" href="/he">עברית</a>
		</li>
		<li>
			<a id="off-canvas-en-button" href="/en">English</a>
		</li>
	</ul>

	<!--contact us -->
	<div class="">
		<hr>
		<svg style="opacity: 0.7;" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewbox="0 0 48 48">
			<g class="nc-icon-wrapper" fill="#ffffff">
				<path d="M31 2H15c-2.76 0-5 2.24-5 5v34c0 2.76 2.24 5 5 5h16c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5zm-8 42c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm9-8H14V8h18v28z"></path>
			</g>
		</svg>
		&nbsp;
		<a href="tel:{{global.phone.number}}" class="uk-link-text">
			{{global.phone.heading}}:

			{{global.phone.number}}
		</a>
	</div>
</div>
</div>
</nav>
